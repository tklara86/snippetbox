{{ template "base" .}}


    {{ define "title"}}Signup {{end}}

{{ define "main"}}
    <form action='/user/signup' method="post" novalidate>
        {{ with .Form}}
            <fieldset class="uk-fieldset">
                <div class="uk-margin">
                    <label>Name</label>
                    {{ with .Errors.Get "name"}}
                        <div class="uk-form-danger">
                            <p>{{.}}</p>
                        </div>
                    {{end}}
                    <input class="uk-input uk-form-large {{ with .Errors.Get "name"}} uk-form-danger  {{end}}" type="text" name="name" placeholder="Name" value="{{.Get "name"}}">
                </div>
                <div class="uk-margin">
                    <label>Email</label>
                    {{ with .Errors.Get "email"}}
                        <div class="uk-form-danger">
                            <p>{{.}}</p>
                        </div>
                    {{end}}
                    <input class="uk-input uk-form-large {{ with .Errors.Get "email"}} uk-form-danger  {{end}}" type="email" name="email" placeholder="Email" value="{{.Get "email"}}">
                </div>
                <div class="uk-margin">
                    <label>Password</label>
                    {{ with .Errors.Get "password"}}
                        <div class="uk-form-danger">
                            <p>{{.}}</p>
                        </div>
                    {{end}}
                    <input class="uk-input uk-form-large {{ with .Errors.Get "password"}} uk-form-danger  {{end}}" type="password" name="password" placeholder="Password">
                </div>


                <button type="submit" class="uk-button uk-button-primary">Signup</button>
            </fieldset>
        {{end}}
    </form>

{{end}}